{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "routes": {
    "authenticationModule": "src/middleware/auth.ts",
    "routesDir": "build"
  }
}
